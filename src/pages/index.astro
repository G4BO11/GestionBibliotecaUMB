---
import Layout from '@layouts/Layout.astro';
import ChatBot from '@components/chatbot/chatbot';
---
<Layout title="GestiÃ³n de Biblioteca UNX">
	<main class="bg-slate-900 flex flex-col w-full h-screen">
		<header class="flex w-full py-4 px-4">
			<h1 class="text-white text-xl">Biblioteca UN</h1>
		</header>
		<main transition:animate="fade" class="main-container relative w-full gap-6 h-full">
			<a href="./Aulas" class="main-container--child bg-slate-300 rounded-lg" transition:name="contAula">
				<h2 class="font-bold text-slate-300" transition:name="nameAula">Aulas</h2>
			</a>
			<a href="./Libros" class="main-container--child bg-slate-300 rounded-lg" transition:name="contLibros">
				<h2 class="font-bold text-slate-300" transition:name="nameLibros">Libros</h2>
			</a>
			<a href="./Dispositivos" class="main-container--child bg-slate-300 rounded-lg" transition:name="contDispositivos">
				<h2 class="font-bold text-slate-300" transition:name="nameDispositivos">Dispositivos</h2>
			</a>
			<aside class="main-container--child  bg-slate-300 rounded-lg">
				<h2 class="font-bold text-slate-300">Otros..</h2>
			</aside>			
		</main>
		<ChatBot client:load/>
	</main>	
</Layout>
<style>
	/* Hago estos estilos aqui por que en tailwind seria una sopa de clases */
	.main-container{
		display: grid;
		grid-template-columns: repeat(5, 240px);
		grid-auto-rows: 200px;
		place-content: center;
	}
	.main-container--child{
		padding: 1rem;
		cursor: pointer;
		background: linear-gradient(125deg, #212d41 10%, #1e293b) padding-box,
        linear-gradient(125deg, #334155, #1e293b) border-box;
		border: 1px solid transparent;
		transition: all ease-in-out 300ms;
	}
	.main-container--child:hover{
		scale: 1.02;		
	}
	.main-container--child:nth-child(1){
		grid-column: 1/5;
		grid-row: 1/3;
	}
	.main-container--child:nth-child(2){
		grid-column: 1/3;
	}
	.main-container--child:nth-child(3){
		grid-column: 3/5;
	}
	.main-container--child:last-child{
		grid-column: 5/6;
		grid-row: 1/4;
	}
</style>