---
import { ViewTransitions } from 'astro:transitions';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Un sitio web de reservas para una biblioteca" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/GestionBibliotecaUMB/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<ViewTransitions/>
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	*{
		font-family: 'Zed Sans Extended';
	}
    /* Estilos para la barra de desplazamiento lateral */
    ::-webkit-scrollbar {
		width: 6px; 
	}
	::-webkit-scrollbar-track {
		background: #12141B
	}

	::-webkit-scrollbar-thumb {
		margin-right: 5px;
		border-radius: 5px;
		background: rgba(255, 255, 255, 0.5);
	}
</style>
